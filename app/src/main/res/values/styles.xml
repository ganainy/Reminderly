<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryTextColor</item>
    </style>


    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/cairo</item>
    </style>


    <style name="ReminderItemStyle" parent="MyTextViewStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

</resources>
